<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSaleActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradientbackground"/>
    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/imgBanner"
        android:layout_height="100dp"
        android:src="@drawable/dmtoptag"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/txtClientName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBanner"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:text="Client Name"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/edtClientName"
        android:layout_below="@+id/txtClientName"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFF"/>
    <TextView
        android:id="@+id/txtSaleAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtClientName"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:text="Sale Amount"
        android:textStyle="bold"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/edtSaleAmount"
        android:inputType="numberDecimal"
        android:layout_below="@+id/txtSaleAmount"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFF"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAdd"
        android:layout_below="@id/edtSaleAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add Sale"
        android:backgroundTint="@color/DMblue"/>


</RelativeLayout>